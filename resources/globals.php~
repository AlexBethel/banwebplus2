<?php
$maindb = "banweb_test_main";
$userdb = "students";
$global_user = NULL;
$global_opened_db = FALSE;
$session_started = FALSE;
$global_path_to_jquery = "/jquery-ui-1.10.0.custom/js/jquery-1.9.0.js";

require_once(dirname(__FILE__)."/common_functions.php");
require_once(dirname(__FILE__)."/../objects/user.php");

global_load_user();

function global_load_user() {
	global $global_user;
	global $global_timeout_logout;

	my_session_start();
	if (!isset($_SESSION['username']) || !isset($_SESSION['last_activity']))
			return FALSE;
	$last_activity = (int)$_SESSION['last_activity'];
	if ((time()-$last_activity)/60 >= $global_timeout_logout)
			logout_session();
	$global_user = new user($_SESSION['username'], NULL, $_SESSION['crypt_password']);
	if (!$global_user->exists_in_db())
			return FALSE;
	$_SESSION['last_activity'] = time();
}
?>